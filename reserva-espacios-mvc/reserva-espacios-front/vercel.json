{
  "version": 2,
  "builds": [
    {
      "src": "src/index.html",
      "use": "@vercel/static-build",
      "config": {
        "framework": "angular",
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "build": ""
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ],
  "scripts": {
    "build": "ng build --configuration production"
  }
}